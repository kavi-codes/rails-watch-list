<h1><%= @list.name %></h1>

<% @list.movies.each do |movie| %>
  <p><%= movie.title %></p>
<% end %>

<%= link_to "delete list", list_path(@list), class:"button-action", data: { turbo_method: :delete, turbo_confirm: "Are you sure"} %>

<h2>Add a new movie</h2>

<div class="container">
  <div class="row">
    <div class="col-6">
      <%= simple_form_for [@list, @bookmark] do |f| %>
        <%= f.input :movie %>
        <%= f.input :comment %>
        <%= f.button :submit, class: 'btn btn-primary mt-3'%>
      <% end %>
    </div>
  </div>
</div>
