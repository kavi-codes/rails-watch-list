<h1><%= @list.name %></h1>

<% @list.movies.each do |movie| %>
  <p><%= movie.title %></p>
<% end %>

<h2>Create a new List</h2>

<div class="container">
  <div class="row">
    <div class="col-6">
      <%= simple_form_for [ @list, @bookmark] do |f| %>
        <%= f.input :comment %>
        <%= f.input :movie_id %>
        <%= f.button :submit, class: 'btn btn-primary mt-3'%>
      <% end %>
    </div>
  </div>
</div>
